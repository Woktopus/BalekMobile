<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.woktopus.balekmobile.SimonActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/texture">
        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="73dp"
            app:srcCompat="@drawable/elephant_simon" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageButton7"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/elephant_simon" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageButton8"
            android:layout_marginEnd="41dp"
            android:layout_marginRight="41dp"
            app:srcCompat="@drawable/elephant_simon" />

        <ImageButton
            android:id="@+id/imageButton10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageButton7"
            android:layout_alignStart="@+id/imageButton7"
            android:layout_below="@+id/imageButton7"
            android:layout_marginTop="66dp"
            app:srcCompat="@drawable/elephant_simon" />

        <ImageButton
            android:id="@+id/imageButton11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageButton8"
            android:layout_alignStart="@+id/imageButton8"
            android:layout_alignTop="@+id/imageButton10"
            app:srcCompat="@drawable/elephant_simon" />

        <ImageButton
            android:id="@+id/imageButton12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButton11"
            android:layout_alignLeft="@+id/imageButton9"
            android:layout_alignStart="@+id/imageButton9"
            app:srcCompat="@drawable/elephant_simon" />

        <ImageButton
            android:id="@+id/imageButton13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageButton10"
            android:layout_alignRight="@+id/imageButton10"
            android:layout_below="@+id/imageButton10"
            android:layout_marginTop="89dp"
            app:srcCompat="@drawable/elephant_simon" />

        <ImageButton
            android:id="@+id/imageButton14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButton13"
            android:layout_alignEnd="@+id/imageButton11"
            android:layout_alignRight="@+id/imageButton11"
            app:srcCompat="@drawable/elephant_simon" />

        <ImageButton
            android:id="@+id/imageButton15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButton14"
            android:layout_alignLeft="@+id/imageButton12"
            android:layout_alignStart="@+id/imageButton12"
            app:srcCompat="@drawable/elephant_simon" />

    </RelativeLayout>
</FrameLayout>
